<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9D18E "
    tools:context=".FiveActivity">

    <TextView
        android:id="@+id/two_top4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#548236 "
        android:gravity="center"
        android:text="传感器情况 "
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/five_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two_top4"
        android:layout_marginTop="0dp"
        android:background="#C5E0B4 "
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蜂箱编号："
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/hive_number_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/five_lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/five_lay1"
        android:layout_marginTop="0dp"
        android:background="#A9D18E"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/sensorr" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位置开关" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="连接正常"
            android:textColor="@color/car_protection" />

        <TextView
            android:id="@+id/location_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7/7"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/location_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/alert_false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/five_lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/five_lay2"
        android:layout_marginTop="0dp"
        android:background="#C5E0B4 "
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageew7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/gyroscope" />

            <TextView
                android:id="@+id/textew13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加速度计 " />
        </LinearLayout>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="连接正常"
            android:textColor="@color/car_protection" />

        <TextView
            android:id="@+id/acceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/acceleration_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/alert_false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/five_lay4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/five_lay3"
        android:layout_marginTop="0dp"
        android:background="#A9D18E "
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageVew7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/aa" />

            <TextView
                android:id="@+id/extView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方向传感器 " />
        </LinearLayout>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="连接正常"
            android:textColor="@color/car_protection" />

        <TextView
            android:id="@+id/gyroinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/gyroinfo_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/alert_false" />
    </LinearLayout>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>