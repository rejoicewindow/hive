<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context=".SixActivity">

    <TextView
        android:id="@+id/two_top4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#548236 "
        android:gravity="center"
        android:text="设置 "
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/five_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two_top4"
        android:layout_marginTop="0dp"
        android:background="#A9D18E "
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/alerttt" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="声光报警" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/net_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:showText="true"
            android:switchTextAppearance="@style/SwitchTheme"
            android:textOff="@string/SwitchOff"
            android:textOn="@string/SwitchOn"
            android:textSize="24sp"
            android:thumb="@drawable/switch_rectangle_thumb_selector"
            android:track="@drawable/switch_rectangle_track" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/five_lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/five_lay1"
        android:layout_marginTop="0dp"
        android:background="#C5E0B4 "
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageew7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/vibration" />

            <TextView
                android:id="@+id/textew13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="震动提醒" />
        </LinearLayout>

        <TextView
            android:id="@+id/textVie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/vibrationalert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:showText="true"
            android:switchTextAppearance="@style/SwitchTheme"
            android:textOff="@string/SwitchOff"
            android:textOn="@string/SwitchOn"
            android:textSize="24sp"
            android:thumb="@drawable/switch_rectangle_thumb_selector"
            android:track="@drawable/switch_rectangle_track" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/five_lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/five_lay2"
        android:layout_marginTop="0dp"
        android:background="#A9D18E "
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageVew7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/phone" />

            <TextView
                android:id="@+id/extView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="声音提醒 " />
        </LinearLayout>

        <TextView
            android:id="@+id/textVie12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/soundalert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:showText="true"
            android:switchTextAppearance="@style/SwitchTheme"
            android:textOff="@string/SwitchOff"
            android:textOn="@string/SwitchOn"
            android:textSize="24sp"
            android:thumb="@drawable/switch_rectangle_thumb_selector"
            android:track="@drawable/switch_rectangle_track" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/five_lay3"
        android:layout_marginTop="0dp"
        android:background="#A9D18E "
        android:orientation="horizontal"></LinearLayout>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>