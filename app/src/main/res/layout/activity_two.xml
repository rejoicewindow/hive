<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoActivity">

    <TextView
        android:id="@+id/two_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#548236 "
        android:gravity="center"
        android:text="主页"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/two_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two_top"
        android:layout_marginTop="0dp"
        android:background="#A9D18E "
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/apiary" />

        <TextView
            android:id="@+id/two_lay11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="蜂场信息 "
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/two_lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two_lay1"
        android:layout_marginTop="0dp"
        android:background="#C5E0B4 "
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/alert" />

        <TextView
            android:id="@+id/two_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="报警记录 "
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/two_lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two_lay2"
        android:layout_marginTop="0dp"
        android:background="#A9D18E "
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/sensor" />

        <TextView
            android:id="@+id/ttt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="传感器情况 "
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/two_lay4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two_lay3"
        android:layout_marginTop="0dp"
        android:background="#C5E0B4 "
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/settings" />

        <TextView
            android:id="@+id/two_lay6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设置"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two_lay4"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="#A9D18E "
        android:orientation="vertical"/>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>