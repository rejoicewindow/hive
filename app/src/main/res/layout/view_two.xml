<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/two01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pressure"
                android:layout_width="@dimen/sensor_width"
                android:layout_height="@dimen/sensor_height"
                android:src="@drawable/pressure_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="压力传感器" />
        </LinearLayout>

        <TextView
            android:id="@+id/pressureinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:textColor="@android:color/holo_green_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/refresh_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@android:drawable/ic_menu_rotate"
            android:backgroundTint="@android:color/holo_blue_bright" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/two02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two01"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/acceleration"
                android:layout_width="@dimen/sensor_width"
                android:layout_height="@dimen/sensor_height"
                android:src="@drawable/acceleration_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="加速度传感器" />
        </LinearLayout>

        <TextView
            android:id="@+id/accelerationinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:textColor="@android:color/holo_green_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/refresh_acceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@android:drawable/ic_menu_rotate"
            android:backgroundTint="@android:color/holo_blue_bright" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/two03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two02"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gyro"
                android:layout_width="@dimen/sensor_width"
                android:layout_height="@dimen/sensor_height"
                android:src="@drawable/gyro_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="方向传感器" />
        </LinearLayout>

        <TextView
            android:id="@+id/gyroinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:textColor="@android:color/holo_green_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/refresh_gyro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@android:drawable/ic_menu_rotate"
            android:backgroundTint="@android:color/holo_blue_bright" />
    </RelativeLayout>

</RelativeLayout>