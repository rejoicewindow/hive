<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThreeActivity">

    <TextView
        android:id="@+id/two_top2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#548236 "
        android:gravity="center"
        android:text="蜂场信息 "
        android:textSize="30sp" />


    <LinearLayout
        android:id="@+id/three_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two_top2"
        android:layout_marginTop="0dp"
        android:background="#A9D18E "
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/job" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="管理员"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:text="张三李四"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/three_lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/three_lay1"
        android:layout_marginTop="0dp"
        android:background="#C5E0B4 "
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/yii"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/location" />

            <TextView
                android:id="@+id/ytt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="地理位置"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:text="XX省XX市XX县XX镇XXX"
            android:textSize="30sp" />

        <include
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/three_lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/three_lay2"
        android:layout_marginTop="0dp"
        android:background="#A9D18E "
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iii"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/beehiveee" />

            <TextView
                android:id="@+id/ttt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="蜂箱数量 "
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:text="20"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hive_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/three_lay3"
        android:layout_marginTop="0dp"
        android:background="#C5E0B4 "
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/add_hive" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加蜂箱"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="注意：\n所加蜂箱信息得先导入系统\n添加蜂箱得获取蜂箱的编号（一般在蜂箱的侧面）、蜂箱的密钥、在导入系统时所设"
            android:textSize="18sp" />
    </LinearLayout>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>